<div class = "room-info-reserve">
  <%= form_with(model: @reservation, url: item_reservation_params_cfm_path,  method: :patch, local:true) do |f| %>
      <div class = "room-main">
        <ul class = "info-area">
          <li><%= image_tag @items.image.thumb.url %></li>
            <span class = "info-span">
              <li>ルーム名: <%= @items.roomname %></li>
              <li>住所: <%= @items.address %></li>
                <span class = "info-span">
                  <li>ルーム紹介: <%= @items.introduction%></li>
                </span>
            </span>
        </ul>
        <div class = "room-reservation">
          <ul class = "reservation-area">
            <li>¥<%= @items.cost %>/日</li>
            <li>
              <span><%= f.label :start_date, "開始日" %></span>
              <span><%= f.date_field :start_date %></span>
            </li>
            <li>
              <span><%= f.label :end_date, "終了日" %></span>
              <span><%= f.date_field :end_date %></span>
            </li>
            <li>
              <span><%= f.label :count, "人数：" %></span>
              <span><%= f.number_field :count %>人</span>
            </li>
          </ul>

          <%= f.hidden_field :user_id, value: current_user.id %>
          <%= f.hidden_field :item_id, value: @items.id %>

          <div class = "reservation-button">
            <%= f.submit "この条件で予約する" %>
          </div>
        </div>
      </div>
  <% end %>
</div>
